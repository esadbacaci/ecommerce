
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Ekle</h4>
            <p class="card-description">
                Eklemek istediğiniz kategoriyi aşağıya giriniz.
            </p>
            <form asp-controller="Category" asp-action="AddCategory" class="forms-sample">
                <div class="form-group">
                    <label for="CategoryName">Kategori Adı</label>
                    <input name="CategoryName" type="text" class="form-control"  placeholder="Kategori Adı">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>



