@model UserSignUpViewModel
@{
    ViewData["Title"] = "UserRegister";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<link rel="stylesheet" href="~/login-form/css/style.css">

	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
			</div>
			<div class="row justify-content-center">
				<div class="col-md-12 col-lg-10">
					<div class="wrap d-md-flex">
						<div class="img" style="background-image: url(/login-form/images/bg-1.jpg);">
						</div>
						<div class="login-wrap p-4 p-md-5">
							<div class="d-flex">
								<div class="w-100">
									<h3 class="mb-4">Kayıt Ol</h3>
								</div>
								<div class="w-100">
									<p class="social-media d-flex justify-content-end">
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
										<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
									</p>
								</div>
							</div>
						<form role="form" asp-action="UserRegister" class="signin-form">
							<div class="form-group">
								<span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
								<input asp-for="@Model.NameSurname" type="text" class="form-control form-control-lg" placeholder="Ad Soyad" required="">
							</div>

							<div class="form-group">
								<span asp-validation-for="@Model.UserName" class="text-danger"></span>
								<input asp-for="@Model.UserName" type="text" class="form-control form-control-lg" placeholder="Kullanıcı Adı" required="">
							</div>
							<div class="form-group">
								<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
								<input asp-for="@Model.PhoneNumber" type="tel" class="form-control form-control-lg" placeholder="Telefon No" required="">
							</div>
							<div class="form-group">
								<span asp-validation-for="@Model.Mail" class="text-danger"></span>
								<input asp-for="@Model.Mail" type="email" class="form-control form-control-lg" placeholder="Mail" required="">
							</div>

							<div class="form-group">
								<span asp-validation-for="@Model.Password" class="text-danger"></span>
								<input asp-for="@Model.Password" type="password" class="form-control form-control-lg" placeholder="Şifre" required="">
							</div>

							<div class="form-group">
								<input asp-for="@Model.ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Şifre Tekrar" required="">
								<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
							</div>

							<div class="text-danger" asp-validation-summary="ModelOnly">
							</div>
								<div class="form-group">
									<button type="submit" class="form-control btn btn-primary rounded submit px-3">Kayıt Ol</button>
								</div>
								<div class="form-group d-md-flex">
									<div class="w-50 text-left">
										<label class="checkbox-wrap checkbox-primary mb-0">
											Beni Hatırla
											<input type="checkbox" checked>
											<span class="checkmark"></span>
										</label>
									</div>
									<div class="w-50 text-md-right">
										<a href="#">Şifremi Unuttum</a>
									</div>
								</div>
							</form>
							<p class="text-center">Henüz bir hesabınız yok mu ? <a data-toggle="tab" href="#signup">Üye Ol</a></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
<script src="~/login-form/js/jquery.min.js"></script>
<script src="~/login-form/js/popper.js"></script>
<script src="~/login-form/js/bootstrap.min.js"></script>
<script src="~/login-form/js/main.js"></script>

